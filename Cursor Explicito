select * from USUARIO1;
--Empezamos el cursor explicito con update
Declare
SUELDO_HORA INTEGER:=200;
CURSOR CUR_PAGAR_NOMINA IS SELECT* FROM USUARIO1 FOR UPDATE;
BEGIN

FOR REC_USUARIO1 IN CUR_PAGAR_NOMINA LOOP
IF REC_USUARIO1.SUELDOBASE<=6000 THEN
UPDATE USUARIO1 SET SUELDO_BASE=REC_USUARIO1.SUELDO_BASE+48*300 WHERE
CURRENT OF CUR_PAGAR_NOMINA;
ELSE
UPDATE USUARIO1 SET SUELDO_BASE=REC USUARIO1.SUELDO_BASE+48*200 WHERE 
CURRENT OF CUR_PAGAR_NOMINA;
END IF;
END LOOP;
DBMS_OUTPUT.PUT_LINE ('PAGO DE NOMINA EXITOSO :D !');
END;
/
